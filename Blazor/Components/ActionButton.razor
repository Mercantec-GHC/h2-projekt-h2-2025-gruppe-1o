<button type="@(IsSubmit ? "submit" : "button")"
        class="btn @ButtonClass"
        @onclick="OnClick"
        disabled="@Disabled"
        @onclick:preventDefault="false"
        @onclick:stopPropagation="false">
    @ChildContent
</button>

@code {
    [Parameter]
    public ButtonType Type { get; set; } = ButtonType.Primary;

    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    [Parameter]
    public EventCallback<MouseEventArgs> OnClick { get; set; }

    [Parameter]
    public bool IsSubmit { get; set; }

    // --- START ÆNDRING ---
    [Parameter]
    public bool Disabled { get; set; }
    // --- SLUT ÆNDRING ---

    private string ButtonClass => Type switch
    {
        ButtonType.Primary => "btn-primary",
        ButtonType.Accent => "btn-accent",
        ButtonType.Secondary => "btn-secondary",
        _ => "btn-primary"
    };

    public enum ButtonType
    {
        Primary,
        Accent,
        Secondary
    }
}