@page "/admin/bookings"
@layout AdminLayout
@attribute [Authorize(Roles = "Receptionist, Manager")]
@inject APIService ApiService

<PageTitle>Booking Management</PageTitle>

<div class="booking-management-page">
    <h1 class="page-title">Booking Management</h1>
    <p class="page-subtitle">Oversigt over alle bookinger og gæsteaktivitet.</p>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <div class="row g-3 align-items-end">
                <div class="col-md-5">
                    <label class="form-label fw-semibold">Søg i bookinger</label>
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Booking ID, gæstenavn..." @bind="_searchTerm" />
                        <span class="input-group-text"><i class="bi bi-search"></i></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <label class="form-label fw-semibold">Fra dato</label>
                    <InputDate class="form-control" @bind-Value="_dateFilter" />
                </div>
                <div class="col-md-2">
                    <label class="form-label fw-semibold">Status</label>
                    <select class="form-select" @bind="_statusFilter">
                        <option value="">Alle status</option>
                        <option value="Confirmed">Bekræftet</option>
                        <option value="CheckedIn">Checket Ind</option>
                        <option value="CheckedOut">Checket Ud</option>
                        <option value="Cancelled">Annulleret</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button class="btn btn-primary w-100" @onclick="ApplyFilters">Søg</button>
                </div>
            </div>
        </div>
    </div>

    <ul class="nav nav-tabs mb-3">
        <li class="nav-item">
            <button class="nav-link @(_activeTab == "arrivals" ? "active" : "")" @onclick='() => SetActiveTab("arrivals")'>Dagens Ankomster (@_arrivals.Count)</button>
        </li>
        <li class="nav-item">
            <button class="nav-link @(_activeTab == "departures" ? "active" : "")" @onclick='() => SetActiveTab("departures")'>Dagens Afrejser (@_departures.Count)</button>
        </li>
        <li class="nav-item">
            <button class="nav-link @(_activeTab == "all" ? "active" : "")" @onclick='() => SetActiveTab("all")'>Alle Bookinger</button>
        </li>
    </ul>

    @if (_isLoading)
    {
        <p><em>Henter bookinger...</em></p>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead>
                    <tr>
                        <th>Booking ID</th>
                        <th>Gæstenavn</th>
                        <th>Værelse</th>
                        <th>Check-in</th>
                        <th>Check-ud</th>
                        <th>Status</th>
                        <th>Handlinger</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var booking in GetFilteredBookings())
                    {
                        <tr>
                            <td>#@booking.Id.Substring(0, 6)</td>
                            <td>@booking.GuestFullName</td>
                            <td>@booking.RoomTypeName</td>
                            <td>@booking.CheckInDate.ToString("dd/MM/yyyy")</td>
                            <td>@booking.CheckOutDate.ToString("dd/MM/yyyy")</td>
                            <td><span class="badge @GetStatusClass(booking.Status)">@booking.Status</span></td>
                            <td>
                                <button class="btn btn-sm btn-icon"><i class="bi bi-eye-fill"></i></button>
                                <button class="btn btn-sm btn-icon"><i class="bi bi-pencil-fill"></i></button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    <h2 class="mt-5 mb-3">Dagens Statistik</h2>
    @if (_stats == null)
    {
        <p><em>Henter statistik...</em></p>
    }
    else
    {
        <div class="row">
            <div class="col-md-3">
                <div class="card text-center shadow-sm h-100">
                    <div class="card-body">
                        <i class="bi bi-box-arrow-in-right fs-1 text-primary"></i>
                        <h4 class="mt-2">@_stats.ArrivalsCount</h4>
                        <p class="text-muted mb-0">Ankomster</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center shadow-sm h-100">
                    <div class="card-body">
                        <i class="bi bi-box-arrow-left fs-1 text-primary"></i>
                        <h4 class="mt-2">@_stats.DeparturesCount</h4>
                        <p class="text-muted mb-0">Afrejser</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center shadow-sm h-100">
                    <div class="card-body">
                        <i class="bi bi-building fs-1 text-primary"></i>
                        <h4 class="mt-2">@_stats.OccupancyPercentage %</h4>
                        <p class="text-muted mb-0">Belægning</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center shadow-sm h-100">
                    <div class="card-body">
                        <i class="bi bi-cash-stack fs-1 text-primary"></i>
                        <h4 class="mt-2">@_stats.TodaysRevenue.ToString("N0") kr.</h4>
                        <p class="text-muted mb-0">Omsætning</p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private bool _isLoading = true;
    private string _activeTab = "arrivals";

    // Data lists
    private List<BookingSummaryDto> _allBookings = new();
    private List<BookingSummaryDto> _arrivals = new();
    private List<BookingSummaryDto> _departures = new();
    private DailyStatsDto? _stats;

    // Filters
    private string? _searchTerm;
    private DateTime? _dateFilter;
    private string? _statusFilter;

    protected override async Task OnInitializedAsync()
    {
        _isLoading = true;

        var allBookingsTask = ApiService.GetBookingsForAdminAsync();
        var statsTask = ApiService.GetDashboardStatsAsync();

        await Task.WhenAll(allBookingsTask, statsTask);

        _allBookings = await allBookingsTask ?? new();
        _stats = await statsTask;

        FilterLists();
        _isLoading = false;
    }

    private void FilterLists()
    {
        var today = DateTime.UtcNow.Date;
        _arrivals = _allBookings.Where(b => b.CheckInDate.Date == today).ToList();
        _departures = _allBookings.Where(b => b.CheckOutDate.Date == today).ToList();
    }

    private List<BookingSummaryDto> GetFilteredBookings()
    {
        return _activeTab switch
        {
            "arrivals" => _arrivals,
            "departures" => _departures,
            _ => _allBookings
        };
    }

    private void SetActiveTab(string tabName)
    {
        _activeTab = tabName;
    }

    private async Task ApplyFilters()
    {
        _isLoading = true;
        _allBookings = await ApiService.GetBookingsForAdminAsync(_searchTerm, _dateFilter) ?? new();

        // Supplerende client-side filtrering på status, da API ikke understøtter det endnu
        if (!string.IsNullOrEmpty(_statusFilter))
        {
            _allBookings = _allBookings.Where(b => b.Status.Equals(_statusFilter, StringComparison.OrdinalIgnoreCase)).ToList();
        }

        FilterLists();
        _isLoading = false;
    }

    private string GetStatusClass(string status)
    {
        return status.ToLower() switch
        {
            "bekræftet" or "confirmed" => "bg-success text-white",
            "afventer" or "pending" => "bg-warning text-dark",
            "annulleret" or "cancelled" => "bg-danger text-white",
            _ => "bg-secondary text-white"
        };
    }
}