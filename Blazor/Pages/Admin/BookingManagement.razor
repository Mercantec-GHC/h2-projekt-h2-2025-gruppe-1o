@page "/admin/bookings"
@attribute [Authorize(Roles = "Receptionist, Manager")]
@inject APIService ApiService

<PageTitle>Booking Management</PageTitle>

<div class="page-section">
    <h2 class="section-title">Booking Management</h2>
    <p class="section-subtitle">Oversigt over alle bookinger i systemet.</p>

    <div class="card bg-light mb-4">
        <div class="card-body">
            <div class="row g-3 align-items-end">
                <div class="col-md-5">
                    <label class="form-label">Søg på gæstenavn</label>
                    <InputText class="form-control" @bind-Value="_guestNameFilter" />
                </div>
                <div class="col-md-5">
                    <label class="form-label">Vis bookinger for dato</label>
                    <InputDate class="form-control" @bind-Value="_dateFilter" />
                </div>
                <div class="col-md-2">
                    <button class="btn btn-primary w-100" @onclick="SearchBookings">Søg</button>
                </div>
            </div>
        </div>
    </div>

    @if (_isLoading)
    {
        <p><em>Henter bookinger...</em></p>
    }
    else if (_bookings != null && _bookings.Any())
    {
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Gæst</th>
                    <th>Værelsestype</th>
                    <th>Check-in</th>
                    <th>Check-ud</th>
                    <th>Status</th>
                    <th>Handlinger</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var booking in _bookings)
                {
                    <tr>
                        <td>@booking.GuestFullName</td>
                        <td>@booking.RoomTypeName</td>
                        <td>@booking.CheckInDate.ToString("dd MMM yyyy")</td>
                        <td>@booking.CheckOutDate.ToString("dd MMM yyyy")</td>
                        <td><span class="badge bg-primary">@booking.Status</span></td>
                        <td>
                            <button class="btn btn-sm btn-outline-primary">Detaljer</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Der blev ikke fundet nogle bookinger med de valgte kriterier.</p>
    }
</div>

@code {
    private bool _isLoading = true;
    private List<BookingSummaryDto> _bookings = new();

    // Filtre
    private string? _guestNameFilter;
    private DateTime? _dateFilter;

    protected override async Task OnInitializedAsync()
    {
        await LoadBookings();
    }

    private async Task SearchBookings()
    {
        await LoadBookings();
    }

    private async Task LoadBookings()
    {
        _isLoading = true;
        _bookings = await ApiService.GetBookingsForAdminAsync(_guestNameFilter, _dateFilter) ?? new();
        _isLoading = false;
    }
}