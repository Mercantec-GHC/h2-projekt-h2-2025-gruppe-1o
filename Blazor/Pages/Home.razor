@page "/"
@using Blazor.Components

<PageTitle>Velkommen til Flyhigh Hotel</PageTitle>

<div class="hero-section">
    <div class="hero-overlay"></div>
    <div class="hero-content">
        <h1 class="hero-title">Velkommen til Flyhigh Hotel</h1>
        <p class="hero-subtitle">Book dit luksusophold over skyerne</p>
    </div>
</div>

<div class="search-section">
    <BookingSearchForm />
</div>

<div class="page-section">
    <h2 class="section-title"></h2>
    <p class="section-subtitle"></p>
    <div class="room-types-grid">
        <RoomTypeCard Title="Standard Værelse"
                      Price="800"
                      Description="Komfortabelt værelse med alle basisfaciliteter for et behageligt ophold."
                      Features="@(new List<string> { "2 gæster", "Gratis WiFi", "Smart TV" })"
                      ImageUrl="/images/room-standard.png" RoomTypeId="1" />

        <RoomTypeCard Title="Deluxe Suite"
                      Price="2200"
                      Description="Rummelig suite med panoramaudsigt og premium faciliteter for det ultimative ophold."
                      Features="@(new List<string> { "4 gæster", "Balkon", "Mini bar" })"
                      ImageUrl="/images/room-deluxe.png" RoomTypeId="2" />

        <RoomTypeCard Title="Presidential Suite"
                      Price="5000"
                      Description="Den ultimative luksusoplevelse med eksklusiv service og faciliteter i verdensklasse."
                      Features="@(new List<string> { "8 gæster", "Privat spa", "Butler-service" })"
                      ImageUrl="/images/room-presidential.png" RoomTypeId="3" />
    </div>
</div>